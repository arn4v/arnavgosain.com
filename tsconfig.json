{
  "compilerOptions": {
    "target": "ES2019",
    "module": "esnext",
    "lib": ["DOM", "ESNext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "importHelpers": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "typeRoots": ["@types", "./node_modules/@types"],
    "baseUrl": ".",
    "paths": {
      "~/*": ["src/*"]
    },
    "incremental": true
  },
  "exclude": ["node_modules"],
  "include": ["next-env.d.ts", "./types/*.d.ts", "src/**/*"]
}
